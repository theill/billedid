set :rails_env, "production"

set :mongrel_environment, rails_env

set :domain, "#{rails_env}.progressiveitcampaigns.gzb.dk"

# Modify these values to execute tasks on a different server.
role :web, domain
role :app, domain
role :db,  domain, :primary => true
role :scm, domain

set :apache_server_name, domain

set :apache_server_aliases, %w{production.campaigns.progressive.dk campaigns.progressive.dk seminar.progressive.dk kampagner.progressive.dk}
set :apache_proxy_port, X

set :mongrel_port, apache_proxy_port

set :keep_releases, 3
